<h1>Articles listing:</h1>

<p>
<%= link_to 'Create new article', new_article_path %>
</p>

<table>
<tr>
	<th>Title</th>
	<th>Description</th>
	<th>Actions</th>
</tr>	
<% @articles.each do |a| %>
	<tr>
		<td><%= a.title %></td>
		<td><%= a.description %></td>
		<td><%= link_to 'Edit', edit_article_path(a) %>
			<%= link_to 'Show', article_path(a) %>
			<%= link_to 'Kill', a, method: :delete %>
		</td>
	</tr>
<% end %>
</table>